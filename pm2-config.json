{
  "apps": [
    {
      "name": "bot-wa",
      "script": "main.js",
      "instances": 1,
      "exec_mode": "fork",
      "max_memory_restart": "1G",
      "node_args": "--max-old-space-size=1024",
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "./logs/pm2-error.log",
      "out_file": "./logs/pm2-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "watch": false,
      "max_restarts": 10,
      "min_uptime": "10s",
      "restart_delay": 4000
    },
    {
      "name": "dashboard-api",
      "script": "options/dashboard-api.js",
      "instances": 1,
      "exec_mode": "fork",
      "max_memory_restart": "512M",
      "node_args": "--max-old-space-size=512",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3002
      },
      "error_file": "./logs/dashboard-error.log",
      "out_file": "./logs/dashboard-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "watch": false
    },
    {
      "name": "web-pos",
      "script": "web-pos.js",
      "instances": 1,
      "exec_mode": "fork",
      "max_memory_restart": "512M",
      "node_args": "--max-old-space-size=512",
      "env": {
        "NODE_ENV": "production"
      },
      "error_file": "./logs/webpos-error.log",
      "out_file": "./logs/webpos-out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "autorestart": true,
      "watch": false
    }
  ]
}



