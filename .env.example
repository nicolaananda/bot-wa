# ================================
# DATABASE CONFIGURATION
# ================================

# Database Connection (PostgreSQL)
USE_PG=true
PG_HOST=your_database_host
PG_PORT=5432
PG_DATABASE=bot_wa
PG_USER=your_db_user
PG_PASSWORD=your_db_password
PG_SSL=false
PG_POOL_MAX=10
PG_IDLE_TIMEOUT_MS=30000
PG_CONN_TIMEOUT_MS=15000
PG_STATEMENT_TIMEOUT_MS=60000
PG_KEEPALIVE=true
PG_WARMUP_CONNECTIONS=3
PG_QUERY_RETRIES=2
PG_SLOW_MS=500
PG_UPSERT_CHUNK=100

# ================================
# REDIS CONFIGURATION
# ================================

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=10000

# ================================
# WHATSAPP API (GOWA)
# ================================

GOWA_API_URL=https://your-gowa-api-url
GOWA_USERNAME=admin
GOWA_PASSWORD=your_gowa_password
GOWA_DEVICE_ID=default

# ================================
# PAYMENT GATEWAY (MIDTRANS)
# ================================

MIDTRANS_SERVER_KEY=your_midtrans_server_key
MIDTRANS_CLIENT_KEY=your_midtrans_client_key
MIDTRANS_IS_PRODUCTION=false

# ================================
# CLOUDFLARE R2 STORAGE
# ================================

R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=your_bucket_name
R2_PUBLIC_URL=https://your-r2-public-url

# ================================
# TELEGRAM NOTIFICATIONS
# ================================

TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ================================
# BOT CONFIGURATION
# ================================

# Bot Owner
OWNER_NUMBER=628123456789

# Group Whitelist (comma-separated)
BOT_GROUP_NAMES=Group Name 1,Group Name 2
BOT_GROUP_LINKS=https://chat.whatsapp.com/invite1,https://chat.whatsapp.com/invite2

# Rate Limiting
WA_SEND_MIN_INTERVAL_MS=800
WA_SEND_RETRIES=3

# ================================
# APPLICATION SETTINGS
# ================================

NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# Session Management
SESSION_SECRET=your_random_session_secret

# ================================
# OPTIONAL FEATURES
# ================================

# Enable/Disable Features
ENABLE_WEB_POS=true
ENABLE_DASHBOARD=true
ENABLE_AUTO_BACKUP=true

# Backup Configuration
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
