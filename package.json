{
  "name": "bot-wa",
  "version": "1.1.0",
  "description": "Simple whatsapp bot with multi device.",
  "main": "main.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "start": "node --max-old-space-size=1024 nicola",
    "start:unlimited": "node nicola",
    "webpos": "node --max-old-space-size=512 web-pos.js",
    "webpos:dev": "nodemon --max-old-space-size=512 web-pos.js",
    "dashboard": "node --max-old-space-size=512 options/dashboard-api.js",
    "dashboard:dev": "nodemon --max-old-space-size=512 options/dashboard-api.js",
    "backup": "node auto-backup.js backup",
    "restore": "node auto-backup.js restore",
    "backup-list": "node auto-backup.js list",
    "backup-health": "node auto-backup.js health",
    "start-safe": "npm run backup && npm run start",
    "pg:schema": "node -e \"require('dotenv').config(); const fs=require('fs'); const sql=fs.readFileSync('./options/schema.sql','utf8'); require('./config/postgres').query(sql).then(()=>{console.log('Schema applied')}).catch(e=>{console.error(e);process.exit(1)})\"",
    "pg:dedup": "node ./options/dedup-transaksi.js",
    "neon:setup": "node setup-neon.js",
    "neon:test": "node config/neon-test.js",
    "neon:migrate": "node migrate-remote-to-neon.js",
    "lint": "eslint index.js",
    "lint:fix": "eslint --fix index.js",
    "format": "prettier --write index.js",
    "prepare": "husky"
  },
  "author": "Nicola",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.932.0",
    "awesome-phonenumber": "^2.69.0",
    "canvas": "^3.0.0",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.1",
    "express-session": "^1.18.2",
    "figlet": "^1.5.2",
    "file-type": "^16.5.3",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^4.0.0",
    "human-readable": "^0.2.1",
    "ioredis": "^5.8.2",
    "jimp": "^0.16.1",
    "joi": "^18.0.2",
    "knex": "^3.1.0",
    "midtrans-client": "^1.4.3",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.34",
    "ms": "^2.1.3",
    "node-cron": "^3.0.3",
    "node-fetch": "2.6.1",
    "node-telegram-bot-api": "^0.67.0",
    "node-upload-images": "^1.0.1",
    "node-webpmux": "^3.1.0",
    "opossum": "^5.0.1",
    "parse-ms": "^2.1.0",
    "performance-now": "^2.1.0",
    "pg": "^8.16.3",
    "qrcode": "^1.5.0",
    "qs": "^6.11.2",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2"
  }
}
